import base64
from optparse import OptionParser

import gtk
from gtk import gdk

from tegakigtk.recognizer import SmartRecognizerWidget, SimpleRecognizerWidget
from tegakigtk.fakekey import send_unicode

VERSION = '0.3.1'

ICON = \
